{
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "outDir": "./webpack_bundles/",
    "jsx": "react",
    "plugins": [
      {
        "name": "ts-graphql-plugin",
        "schema": "schema.json",
        "tag": "gql"
      }
    ],
  },
  "files": [
    "assets/js/index.tsx"
  ],
  "references": [
    {
      "path": "./js-packages/client/tsconfig.json"
    },
    {
      "path": "./js-packages/misc/tsconfig.json"
    },
    {
      "path": "./js-packages/rdf/tsconfig.json"
    }
  ],
  "exclude": [
    "node_modules",
    "webpack.config.*.js",
    "**/*.spec.ts"
  ]
  
}
