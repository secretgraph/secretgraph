{
  "extends": "../../tsconfig-base.json",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "baseUrl": "src",
    "composite": true,
    "jsx": "react",
    "lib": [
      "ESNext",
      "dom"
    ],
    "paths": {
      "@secretgraph/misc/*": ["../../misc/src/*"],
      "@secretgraph/dompurify-custom/*": ["../../dompurify-custom/src/*"],
      "@secretgraph/graphql-queries/*": [
        "../../graphql-queries/src/*"
      ]
    }
  },
  "references": [
    {
      "path": "../graphql-queries/tsconfig.json"
    },
    {
      "path": "../dompurify-custom/tsconfig.json"
    },
    {
      "path": "../misc/tsconfig.json"
    }
  ],
  "include": [
    "src/**/*.ts*"
  ]
}
