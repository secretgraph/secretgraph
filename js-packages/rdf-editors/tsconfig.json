{
  "extends": "../../tsconfig-base.json",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "baseUrl": "src",
    "jsx": "react",
    "composite": true,
    "lib": [
      "ESNext",
      "dom"
    ],
    "paths": {
      "@secretgraph/misc/*": [
        "../../misc/src/*"
      ],
      "@secretgraph/rdf/*": [
        "../../rdf/src/*"
      ],
      "@secretgraph/client/*": [
        "../../client/src/*"
      ],
      "@secretgraph/rdf-editors/*": [
        "./*"
      ]
    }
  },
  "include": [
    "src/**/*.ts*"
  ],
  "references": [
    {
      "path": "../misc/tsconfig.json"
    },
    {
      "path": "../rdf/tsconfig.json"
    },
    {
      "path": "../client/tsconfig.json"
    }
  ],
}
